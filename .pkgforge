name 'libgcrypt'
org 'amylum'

licenses 'COPYING.LIB'

deps(
  'libgpg-error': {
    version: '1.29-1',
    checksum: '34c4ab5446b371eaacb7dd57b24d823a42436c370ce5886db7a5c468892b0da0'
  }
)

configure_flags(
  prefix: '/usr',
  'with-gpg-error-prefix': "#{dep(:'libgpg-error')}/usr",
  'enable-maintainer-mode': nil,
  'disable-padlock-support': nil
)
remove_linker_archives

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
