name 'libgcrypt'
org 'amylum'

licenses 'COPYING.LIB'

deps(
  'libgpg-error': {
    version: '1.27-1',
    checksum: '7ae57f06296bf6ef98fc450f7ef7d1a47753d429c1cdc440045a03ed108d58de'
  }
)

configure_flags(
  prefix: '/usr',
  'with-gpg-error-prefix': "#{dep(:'libgpg-error')}/usr",
  'enable-maintainer-mode': nil,
  'disable-padlock-support': nil
)
remove_linker_archives

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
