name 'libgcrypt'
org 'amylum'

licenses 'COPYING.LIB'

deps(
  'libgpg-error': {
    version: '1.31-1',
    checksum: '8f405a9f6936a5e17e992bd69211a0e22cfa52a18abcc8eb217ea86a1871085a'
  }
)

configure_flags(
  prefix: '/usr',
  'with-gpg-error-prefix': "#{dep(:'libgpg-error')}/usr",
  'enable-maintainer-mode': nil,
  'disable-padlock-support': nil
)
remove_linker_archives

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
