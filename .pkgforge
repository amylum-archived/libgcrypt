name 'libgcrypt'
org 'amylum'

licenses 'COPYING.LIB'

deps(
  'libgpg-error': {
    version: '1.28-1',
    checksum: '55eec88e8ef7164bc4c2a851fb1f8128f3fe0b0a5e464db77725affb19191f6e'
  }
)

configure_flags(
  prefix: '/usr',
  'with-gpg-error-prefix': "#{dep(:'libgpg-error')}/usr",
  'enable-maintainer-mode': nil,
  'disable-padlock-support': nil
)
remove_linker_archives

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
