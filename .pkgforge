name 'libgcrypt'
org 'amylum'

licenses 'COPYING.LIB'

deps(
  'libgpg-error': {
    version: '1.35-1',
    checksum: '1930a9879a364751e2486ee796d8c081b3a5307aa1e70f5b84e15b612b9d120b'
  }
)

configure_flags(
  prefix: '/usr',
  'with-gpg-error-prefix': "#{dep(:'libgpg-error')}/usr",
  'enable-maintainer-mode': nil,
  'disable-padlock-support': nil
)
remove_linker_archives

cflags
harden

build do
  run './autogen.sh'
  configure
  make
  install
end

test do
  # TODO: add tests
end
